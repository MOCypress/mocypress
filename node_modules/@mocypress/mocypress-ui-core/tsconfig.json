{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "types": [
      "cypress",
      "cypress-xpath"
    ],
    "skipLibCheck": true,
    "isolatedModules": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}